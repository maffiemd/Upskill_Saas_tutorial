<div class = "container">
<div class = "row">
  <div class= "col-md-4 col-md-offset-4">
    <div class = 'text-center'>
      <% if params[:plan] == '2' %>
        <h1>Pro Account</h1>
        <h2>Sign up for the Pro Account for $10/Month</h2>
      <% else %>
      <h1>Basic Account</h1>
      <h2>Sign up free to recieve access to the comunity</h2>
      <% end %>
    </div>
    <div class = "well">
       <h2>Sign up</h2>
       <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>
        <%= render "basic_form" %>
      <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>